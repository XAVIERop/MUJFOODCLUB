# MUJ Food Club - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
VITE_SUPABASE_URL=your-supabase-project-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_PROJECT_ID=your-supabase-project-id

# =============================================================================
# PRINTNODE API KEYS (for thermal printing)
# =============================================================================
VITE_PRINTNODE_API_KEY=your-main-printnode-api-key
VITE_CHATKARA_PRINTNODE_API_KEY=your-chatkara-printnode-api-key
VITE_FOODCOURT_PRINTNODE_API_KEY=your-foodcourt-printnode-api-key
VITE_PUNJABI_TADKA_PRINTNODE_API_KEY=your-punjabi-tadka-printnode-api-key
VITE_SHARED_PRINTNODE_API_KEY=your-shared-printnode-api-key

# =============================================================================
# TWILIO WHATSAPP CONFIGURATION
# =============================================================================
VITE_TWILIO_ACCOUNT_SID=your-twilio-account-sid
VITE_TWILIO_AUTH_TOKEN=your-twilio-auth-token
VITE_TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
VITE_WHATSAPP_SANDBOX_MODE=true

# =============================================================================
# META WHATSAPP BUSINESS API (Alternative)
# =============================================================================
VITE_META_WHATSAPP_ACCESS_TOKEN=your-meta-whatsapp-access-token
VITE_META_WHATSAPP_PHONE_NUMBER_ID=your-meta-whatsapp-phone-number-id
VITE_META_WHATSAPP_BUSINESS_ACCOUNT_ID=your-meta-whatsapp-business-account-id

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
VITE_SENTRY_DSN=your-sentry-dsn
VITE_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0
VITE_APP_NAME=MUJ Food Club

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
VITE_CORS_ORIGIN=https://mujfoodclub.in
VITE_RATE_LIMIT_ENABLED=true
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_DEBUG_MODE=false

# =============================================================================
# SERVER CONFIGURATION (for server/.env)
# =============================================================================
PORT=3001
NODE_ENV=production

# Supabase Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Twilio Configuration (for sending responses)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Webhook Configuration
WEBHOOK_URL=https://your-domain.com/whatsapp-webhook
